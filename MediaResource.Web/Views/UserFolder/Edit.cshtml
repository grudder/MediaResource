@{
	Layout = null;
}

@model MediaResource.Web.Models.UserFolder

<!DOCTYPE html>
<html lang="zh-cn">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<title>修改目录 - 媒体资源系统</title>
</head>
<body>
@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()

	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4 class="modal-title">
			修改目录
		</h4>
	</div>
	<div class="modal-body">
		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group hide">
				@Html.LabelFor(model => model.Id, new { @class = "control-label sr-only" })
				<div class="col-xs-10">
					@Html.HiddenFor(model => model.Id)
				</div>
			</div>
			<div class="form-group hide">
				@Html.LabelFor(model => model.ObjectType, new { @class = "control-label col-xs-2" })
				<div class="col-xs-10">
					@Html.HiddenFor(model => model.ObjectType)
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.Name, new { @class = "control-label col-xs-2" })
				<div class="col-xs-10">
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group hide">
				@Html.LabelFor(model => model.CreateBy, new { @class = "control-label col-xs-2" })
				<div class="col-xs-10">
					@Html.EditorFor(model => model.CreateBy)
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.CreateDate, new { @class = "control-label col-xs-2" })
				<div class="col-xs-10">
					@Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control", @readonly="readonly" } })
					@Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary">确定</button>
		<button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
	</div>
}

@Scripts.Render("~/bundles/jqueryval")
</body>
</html>
