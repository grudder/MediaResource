@{
	Layout = null;
}

@using MediaResource.Web.Helper
@using MediaResource.Web.Models.ViewModels
@using PagedList.Mvc;

@model PagedList.StaticPagedList<ImageViewModel>

<!DOCTYPE html>
<html lang="zh-cn">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>电视新闻</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		@Scripts.Render("~/bundles/html5")
    <![endif]-->
</head>
<body>
	<h4>
		分类：
		@if (ViewBag.Category != null)
		{
			@ViewBag.Category.Name
		}
		|
		<a href="#" class="btn btn-primary" role="button" onclick="applyForDownload()">申请下载</a>
	</h4>
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-sm-3 thumbnail-sm">
				<div class="thumbnail">
					<a title="查看" data-toggle="modal" href="#" onclick="showNewsDetailModal(@item.Id)">
                        <div class="img-md-wrap">
                            <img src='@Url.Content(item.FileUrl)' />
			            </div>
					</a>
					<div class="caption">
						<p class="title">
							@Html.TrimText(item.Name, 18)
						</p>
						<input type="checkbox" onclick="checkNews('@item.Name')" />
					</div>
				</div>
			</div>
		}
	</div>
    <div class="text-center">
        @Html.PagedListPager(Model, page => Url.Action("List", new { ViewBag.Id, page, ViewBag.NameOrKeyword, ViewBag.Person, ViewBag.StartTime, ViewBag.EndTime, ViewBag.GroupIds }))
    </div>

    <p class="text-center">
        <label>高级搜索</label>
        <hr />
    </p>
    <form class="form-horizontal" role="form" method="POST" action='@Url.Action("List")' onsubmit="parent.scrollTo(0, 0)">
        <div class="form-group">
            <label for="nameOrKeyword" class="col-sm-2 control-label">名称：</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="nameOrKeyword" name="nameOrKeyword" value="@ViewBag.NameOrKeyword" />
            </div>
            <label for="person" class="col-sm-2 control-label">人物：</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="person" name="person" value="@ViewBag.Person" />
            </div>
        </div>
        <div class="form-group">
            <label for="startTime" class="col-sm-2 control-label">时间：</label>
            <div class="col-sm-10">
                <input type="text" placeholder="起始时间" class="Wdate" id="startTime" name="startTime" onfocus="WdatePicker({ maxDate: '#F{$dp.$D(\'endTime\');}' })" value="@ViewBag.StartTime" />
                —
                <input type="text" placeholder="结束时间" class="Wdate" id="endTime" name="endTime" onfocus="WdatePicker({ minDate: '#F{$dp.$D(\'startTime\');}' })" value="@ViewBag.EndTime" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">参与处室：</label>
            <div class="col-sm-10">
                <div class="row">
                    @foreach (var group in ViewBag.Groups)
                    {
                        <div class="col-sm-4">
                            <label class="radio-inline">
                                <input type="checkbox" name="groupIds" value="@group.Id" />
                                @group.Name
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-primary">查询</button>
            </div>
        </div>
    </form>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src='@Url.Content("~/Scripts/My97DatePicker/WdatePicker.js")'></script>
	<script type="text/javascript">
		var selectedNewss = new Array();

		function showNewsDetailModal(id) {
			parent.$("#newsDetailModal").modal({
				show: true,
				remote: '@Url.Action("Detail", "News")' + "/" + id
			});
		}

		function checkNews(name) {
			if (event.srcElement.checked) {
				selectedNewss.push(name);
			}
			else {
				var index = selectedNewss.indexOf(name);
				selectedNewss.splice(index, 1);
			}
			parent.$("#inputDetail").val(selectedNewss.join("，"));
		}

		function applyForDownload() {
			var description = parent.$("#inputDetail").val();
			if (description == "") {
				alert("请选择您要下载的电视新闻！");
				return;
			}

			parent.$("#applyForDownloadModal").modal();
		}
	</script>
</body>
</html>
