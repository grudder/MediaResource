@model List<MediaResource.Web.Models.ViewModels.StatViewModel>

<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">
					<img src='@Url.Content("~/Images/stat-icon.png")' />
					素材统计
				</h3>
			</div>
			<div class="panel-body panel-body-group">
			    <ul class="list-group">
			        @foreach (var item in Model)
			        {
			            <li class="list-group-item">
			                @item.Name
			                ：
			                @Html.FormatValue(item.Count, "{0:N0}")
			            </li>
			        }
			    </ul>
			    <p>
		            <a href='@Url.Action("Index", "User", new {activeTab = 3})' class="btn btn-primary">上传我的照片</a>
		            <a href='@Url.Action("Index", "User", new {activeTab = 5})' class="btn btn-primary">上传我的视频</a>
			    </p>
			</div>
		</div>
	</div>
</div>
