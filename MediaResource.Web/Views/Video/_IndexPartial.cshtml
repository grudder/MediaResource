@using MediaResource.Web.Helper
@model List<MediaResource.Web.Models.ViewModels.ImageViewModel>

<div id="videoListPanel" class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<div class="row">
					<div class="col-md-6">
						<h3 class="panel-title">
							<img src='@Url.Content("~/Images/video-icon.png")' />
							视频集
						</h3>
					</div>
					<div class="col-md-6">
						<a href='@Url.Action("Category", "Video")' class="navbar-right">更多&gt;&gt;</a>
					</div>
				</div>
			</div>
			<div class="panel-body">
				<div class="col-md-6 thumbnail-xl">
					@if (Model.Count > 0)
					{
						<a data-toggle="modal" href='@Url.Action("Detail", "Video", new { id = Model[0].Id})' data-target="#videoDetailModal">
						    <div class="img-xl-wrap">
						        <img src='@Url.Content(Model[0].FileUrl)' />
						    </div>
						</a>
						<p>
							@Html.TrimText(Model[0].Name, 82)
						</p>
					}
				</div>
				<div class="col-md-6">
					<div class="row">
						@for (int i = 1; i < Model.Count; ++i)
						{
							<div class="col-md-6 thumbnail-sm">
								<a data-toggle="modal" href='@Url.Action("Detail", "Video", new { id = Model[i].Id})' data-target="#videoDetailModal">
								    <div class="img-md-wrap">
								        <img src='@Url.Content(Model[i].FileUrl)' />
                                    </div>
								</a>
								<p>
									@Html.TrimText(Model[i].Name, 38)
									<br />
									@Html.FormatValue(Model[i].CreateDate, "{0:yyyy-MM-dd}")
								</p>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="videoDetailModal" class="modal fade">
	<div class="modal-dialog modal-dialog-lg">
		<div class="modal-content">
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
